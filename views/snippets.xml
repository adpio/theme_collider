<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <data>

<template id="snippet_products" name="Products Snippet">
	<section id="work"  class="snippet_products background1 section-padding-top" >

		<script type="text/javascript" src="/theme_tutorial/static/js/context.js"></script>

		<!-- Handlebars-->
		<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.0.10/handlebars.min.js"></script>



		<!-- Begin Tech Partners -->

		<div class="container">
			<div class="row">
				<div class="col-xs-12 section-title text-center">
					<h2>Our Technology Partners</h2>
					<span class="section-divider mb15"></span>
					<p class="mb30 scaleReveal">Check out proven solutions that can deliver measurable results today.</p>
				</div><!-- /.column -->
			</div><!-- /.row -->
			<div class="row">
				<div class="col-xs-12 text-center mb50">
					<!-- Filter Buttons -->
					<button class="filter btn btn-default btn-category btn-lg" data-filter="all">All</button>
					<button class="filter btn btn-default btn-category btn-lg" data-filter=".awareness">Spark awareness</button>
					<button class="filter btn btn-default btn-category btn-lg" data-filter=".consideration">Trigger consideration</button>
					<button class="filter btn btn-default btn-category btn-lg" data-filter=".conversion">Secure conversion</button>
					<button class="filter btn btn-default btn-category btn-lg" data-filter=".loyalty">Create loyalty</button>

					<!-- Sort Buttons -->
<!-- 					<button class="sort btn btn-default btn-sort btn-lg" data-sort="my-order:asc"><span class="ion-ios-plus-empty"></span></button>
<button class="sort btn btn-default btn-sort btn-lg" data-sort="my-order:desc"><span class="ion-ios-minus-empty"></span></button> -->
</div><!-- /.column -->
</div><!-- /.row -->

<div id="thework">



	<script type="text/x-handlebars-template" id="product-template">
		{{#each product}}

		<!-- Item: {{name}} -->
		<div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 portfolio-box no-padding mix {{filters}}" data-my-order="1">
			<div class="portfolio-image-holder"><img src="{{img}}" alt="{{name}}-img" class="img-responsive portfolio-image"></div>
			<span class="portfolio-badge badge">{{name}}</span>
			<span class="portfolio-hover">
				<span>
					<span class="project-title no-margin-bottom mt10">{{tagline}}</span>
					<button type="button" class="btn btn-default mt10" data-toggle="modal" data-target="#{{id}}-services" >Case Studies & More</button>

				</span>
			</span>
			<!-- Item 1 Modal -->
			<div class="modal fade" id="{{id}}-services" tabindex="-1" role="dialog">
				<div class="modal-dialog">
					<div class="modal-content">
						<div class="modal-header">
							<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span class="ion-ios-close-empty"></span>
						</button>
						{{# if img}}	
						<img src="{{ img }}"/ style="max-height: 100px; max-width: 100px; float: right;">
							{{ else }}
							<span class="pe-7s-airplay services-icon-2"></span>
							{{/if}}
							<h4 class="service-title">{{h4}}</h4><small>with {{name}}</small>
						</div>
						<div class="modal-body">
							{{{description}}}
							<h5 class="heading-1 modal-heading mb20">More Information</h5>
							<p class="no-margin-bottom">
								<a class="btn btn-primary btn-lg" href="/page/case-studies">
									<span class="ion-easel portfolio-links-icons"></span> 
									Case Studies
								</a>
								{{#if infographic-link}}
								<a href="{{infographic-link}}" target="_blank" class="btn btn-primary btn-lg">
									<span class="ion-archive portfolio-links-icons"></span> 
									Download infographic
								</a>
								{{/if}}
								{{#if reveal-link}}
								<a href="{{reveal-link}}" target="_blank" class="btn btn-primary btn-lg">
									<span class="ion-map portfolio-links-icons"></span> Virtual Tour
								</a>
								{{/if}}
							</p>
							<hr>
								{{#if infographic-img}}
								<p>
									<img src="{{infographic-img}}" alt="{{name}} image alt" style="max-width:100%;">
									</p>
									{{/if}}
								</div>
							</div><!-- /.modal-content -->
						</div><!-- /.modal-dialog -->
					</div><!-- /.modal -->

				</div><!-- /.column -->

				{{/each}}
			</script>
			<script type="text/javascript">
				var templateScript = Handlebars.compile($('#product-template').html());
				var html = templateScript(context)
				$('#thework').append(html)
			</script>


		</div><!-- /.row -->
	</div><!-- /.container -->
</section><!-- /.section -->
<!-- End Tech Partners -->

</template>

<template id="place_into_bar" inherit_id="website.snippets" name="Place into bar">
	<xpath expr="//div[@id='snippet_content']/div[@class='o_panel_body']" position="inside">
		<t t-snippet="theme_tutorial.snippet_products"
			t-thumbnail="/theme_collider/static/src/img/ui/snippet_thumb.jpg"/>
		</xpath>
	</template>


  </data>
</odoo>