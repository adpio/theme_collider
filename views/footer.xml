<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

<template id="footer_default" inherit_id="website.footer_custom" customize_show="True" name="Automatic Footer">
    <xpath expr="//div[@id='footer']" position="replace">
       
		<div class="container">
			<div class="row mb30">
				<!-- Logo -->
				<div class="col-sm-3">
					<span class="icon-handle-streamline-vector logo"></span>
					<h2 class="theme-title pull-left mr15">P<span class="theme-title-smaller">T</span></h2>
					<p class="no-margin text-switch">
						Officiis debitis aut rerum necessitatibus saepe eveniet ut et voluptates. Temporibus autem quibusdam et aut.
					</p>
				</div><!-- /.column -->

				<!-- Social -->
				<div class="col-sm-3 mt30-xs">
					<h5 class="heading-1 mb20">Social</h5>
					<ul class="list-inline social-buttons">
                        <li><a t-att-href="website.social_twitter" t-if="website.social_twitter"><i class="ion-social-twitter"></i></a></li>
                        <li><a t-att-href="website.social_facebook" t-if="website.social_facebook"><i class="ion-social-facebook"></i></a></li>
                        <li><a t-att-href="website.social_googleplus" t-if="website.social_googleplus"><i class="ion-social-googleplus-outline"></i></a></li>
                        <li><a t-att-href="website.social_linkedin" t-if="website.social_linkedin"><i class="ion-social-linkedin"></i></a></li>
                        <li><a t-att-href="website.social_youtube" t-if="website.social_youtube"><i class="ion-social-youtube"></i></a></li>
                        <li><a href="#"><i class="ion-social-dropbox"></i></a></li>
                        <li><a href="#"><i class="ion-social-foursquare"></i></a></li>
                        <li><a t-att-href="website.social_github" t-if="website.social_github"><i class="ion-social-github"></i></a></li>
                        <li><a href="#"><i class="ion-social-instagram-outline"></i></a></li>
                        <li><a href="#"><i class="ion-social-snapchat-outline"></i></a></li>
                    </ul>
				</div><!-- /.column -->

				<!-- List -->
				<div class="col-sm-3">
					<h5 class="heading-1 mb20">List</h5>
					<ul class="list-arrow list-arrow-color no-margin text-small">
					    <li>Lorem ipsum dolor sit aut</li>
					    <li>Integer eu neque arcu</li>
					    <li>Officiis debitis au rerum</li>
					    <li>Cras imperdiet eget dictum</li>
					    <li>Lorem ipsum dolor</li>
					</ul>
				</div><!-- /.column -->

				<!-- Contact -->
				<div class="col-sm-3 mt30-xs">
					<h5 class="heading-1 mb20">Contact Us</h5>
					<h5 class="mb15">142 Pelican Drive â€¢ 1252nd Floor, Suite 420 New York City, New York 99912</h5>
					<p class="text-xs-small mb5"><strong class="text-switch">Email:</strong><span t-field="res_company.email"></span></p>
					<p class="text-xs-small mb5"><strong class="text-switch">Phone:</strong><span t-field="res_company.phone"></span></p>
				</div><!-- /.column -->
			</div>

			<div class="row">
				<div class="col-sm-12 text-center">
					<em class="text-small">Crafted with <span class="text-switch ion-heart"></span> by Denis Samardjiev</em>
					<p class="text-switch no-margin">&copy; 2016</p>
				</div><!-- /.column -->
			</div><!-- /.row -->
		</div><!-- /.container -->



    </xpath>
</template>

  </data>
</odoo>